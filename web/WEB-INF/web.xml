<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>controller.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addAccount</servlet-name>
        <servlet-class>controller.addAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listHotelServlet</servlet-name>
        <servlet-class>controller.listHotelServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>hotelsServlet</servlet-name>
        <servlet-class>controller.hotelsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>detailServlet</servlet-name>
        <servlet-class>controller.detailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addFeedback</servlet-name>
        <servlet-class>controller.addFeedback</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addComment</servlet-name>
        <servlet-class>controller.addComment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addHotelServlet</servlet-name>
        <servlet-class>controller.addHotelServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>searchServlet</servlet-name>
        <servlet-class>controller.searchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addAccount</servlet-name>
        <url-pattern>/addAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listHotelServlet</servlet-name>
        <url-pattern>/listHotelServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>hotelsServlet</servlet-name>
        <url-pattern>/hotels</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>detailServlet</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addFeedback</servlet-name>
        <url-pattern>/addFeedback</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addComment</servlet-name>
        <url-pattern>/addComment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addHotelServlet</servlet-name>
        <url-pattern>/addhotel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchServlet</servlet-name>
        <url-pattern>/searching</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
